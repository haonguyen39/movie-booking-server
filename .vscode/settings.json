{
  // ======
  // Spacing
  // ======
  "editor.tabSize": 2,
  "files.exclude": {
    "**/.git": true,
    "**/.vscode": true,
    "**/.DS_Store": true
  },

  // ======
  // Event Triggers
  // ======

  "editor.formatOnSave": true,
  "eslint.enable": true,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",

  // ======
  // MARKDOWN
  // ======

  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80
  }
}
